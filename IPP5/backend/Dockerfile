FROM node:14

# Установите рабочую директорию в /app
WORKDIR /app

# Скопируйте package.json и package-lock.json в рабочую директорию
COPY package*.json ./

# Установите зависимости приложения
RUN npm install

# Скопируйте все файлы из текущего каталога (в котором находится Dockerfile) в рабочую директорию (/app)
COPY . .

# Открыть порт 3000 (замените 3000 на порт, который ваше приложение слушает)
EXPOSE 8080

# Запустите приложение при запуске контейнера
CMD [ "node", "server.js" ]